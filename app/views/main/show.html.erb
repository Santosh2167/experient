<div>
    <%= image_tag current_user.avatar_url%>
</div>

<h2> Purchases </h2>
<div> 
<% @transactions.each do |t| %>
      <div>
      Name: <%=t.product.name%>
      </div>
      <div>
      Cost: $<%=t.product.cost%>
      </div>
      <div>
        <% if t.product_review %>
          <div>
          Rating: <%= t.product_review.rating%>
          </div>
          <div>
          Comment: <%= t.product_review.comment%>
          </div>
          <%= link_to "Edit review", edit_product_review_path(t.product_review.id)%>
        <% else %>
          <%= link_to "Create review", new_product_review_path(transaction_id: t.id)%>
        <% end %>
      </div>
<% end%>
</div>



<% if current_user.is_supplier == true %>
